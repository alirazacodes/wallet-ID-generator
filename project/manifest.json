{
  "manifest_version": 2,
  "name": "Wallet ID Generator",
  "version": "1.0",
  "description": "Generates a unique 24-character wallet ID for every new user.",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/favicon16.png",
      "48": "images/favicon.ico",
      "128": "images/icon.svg"
    },
    "default_popup_dimensions": {
      "width": 400,
      "height": 600
    }
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab"
  ]
}
